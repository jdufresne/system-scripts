[user]
email = jon.dufresne@gmail.com
name = Jon Dufresne

[color]
ui = auto

[core]
editor = emacsclient -c
excludesfile = ~/.gitignore

[alias]
br = branch
ci = commit
co = checkout
cp = cherry-pick
rb = rebase
st = status
pushf = push --force-with-lease
meld = difftool --tool=meld --dir-diff
pr = "!f() { git fetch ${2:-$(git remote | grep '^upstream$' || echo origin)} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref; do branch=${ref#refs/heads/}; git branch -D $branch; done"
sync = "!f() { branch=$(git symbolic-ref --short HEAD) && git fetch --all --prune && git pull upstream ${branch} && git push origin ${branch}; }; f"
need-merge = !"git log ${1} ^HEAD"

[commit]
verbose = true

[diff]
tool = meld

[difftool]
prompt = false

[merge]
ff = false
tool = meld

[pull]
ff = only
